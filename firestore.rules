rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Коллекция accounts - только для аутентифицированных пользователей
    match /accounts/{accountId} {
      allow read, write: if request.auth != null;
    }
    
    // Коллекция posts - только для аутентифицированных пользователей
    match /posts/{postId} {
      allow read, write: if request.auth != null;
    }
    
    // Для Cloud Functions - разрешаем все операции
    // (Cloud Functions работают с правами администратора)
  }
}
